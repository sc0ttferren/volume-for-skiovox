{
  "manifest_version": 2,
  "name": "Volume Display For Skiovox",
  "version": "1.0",
  "description": "Displays volume when adjusted on Skiovox browser",
  "permissions": [
    "audio",
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "vfsicon.png",
      "48": "vfsicon.png",
      "128": "vfsicon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "vfsicon.png",
    "48": "vfsicon.png",
    "128": "vfsicon.png"
  },
  "content_security_policy": {
    "extension_pages": "popup.html"
  }
}
